  .card__full
    .card__full-top
      svg(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 24 24')
        path(d='M16.59 8.59l-4.59 4.58-4.59-4.58-1.41 1.41 6 6 6-6z')
        path(d='M0 0h24v24h-24z', fill='none')
      span.card__full-num
    .card__full-bottom
      p.card__full-handle
      p.card__full-info

  .card__list
    each testimony in testimonials
     .card__item
        .card__info
          .info-player
            +profileImg(testimony.name, testimony.text)
            
            p.info-player__name
              small #{testimony.name.replace(/_/g, ' ')}
              br
              | #{testimony.title}
