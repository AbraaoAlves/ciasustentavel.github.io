    include ./views/imgSlide.jade
    
    header.app-bar.promote-layer
      .app-bar-container
        a(href='http://localhost:3000/', title='CiaSustentavel', class='site-title logo')
          img(src='images/logo.png', alt='Logo')
        nav.navdrawer-container
          ul
            li
              a(href='#home') Inicio
            li
              a(href='#sobre') Sobre
            li
              a(href='#depoimentos') Depoimentos
            li
              a(href='#time') Time
            li
              a(href='#contato') Contato
        section.app-bar-actions
          // e.g <button><i class="icon icon-star"></i></button>
        button.menu.menu-open
          img(src='images/hamburger.svg', alt='Menu')
        // Put App Bar Buttons Here
      .sociais-contats
        
    main
      section.index
        h1
          | Soluções
          strong  Colaborativas
        h4 Mais do que consultoria e inovação. CiaSustentavél trabalha com parceria
        a.button--secondary-variation(href='/#about') Sobre nós
      
      section.about
        a(name='sobre')
        include ./views/about.jade
        
      section.testimonials
        a(name='depoimentos')
        include ./views/testimonials.jade
      section.team
        a(name='time')
        include ./views/team.jade
          
    footer.clear
      a(name='contact')
      include ./views/about.jade
      
